{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "app-2",
    "version": "0.2.52"
  },
  "tauri": {
    "allowlist": {
      "http": {
        "request": true,
        "all": true 
      },
      "fs": {
        "all": true
      },
      "all": true,
      "shell": {
        "all": true,
        "open": true
      }
    },
    "windows": [
      {
        "title": "delivery-copy-pedidos",
        "maxWidth": 321,
        "minWidth": 250,
        "minHeight": 350,
        "width": 320,
        "height": 600,
        "fullscreen": false,
        "resizable": true,
        "decorations": true,
        "visible": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": "default-src 'self' http://200.58.105.74:3001/ https://* data: blob: filesystem:;"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.delivery-copy.pedidos",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
