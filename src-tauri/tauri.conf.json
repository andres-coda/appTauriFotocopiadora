{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Delibery copy",
    "version": "0.2.64"
  },
  "tauri": {
    "allowlist": {
      "http": {
        "all": true
      },
      "fs": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "delivery-copy-pedidos",
        "maxWidth": 321,
        "minWidth": 250,
        "minHeight": 350,
        "width": 320,
        "height": 600,
        "fullscreen": false,
        "resizable": true,
        "decorations": true,
        "visible": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
       "csp": "default-src 'self' https://www.deliberycopy.website; img-src 'self' data: https://* ; style-src 'self';"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.delivery-copy.pedidos",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
